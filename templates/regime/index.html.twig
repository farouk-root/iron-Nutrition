         }

        .price-icon {
            width: 20px; /* Adjust the icon size as needed */
            height: auto;
            margin-right: 5px; /* Adjust the margin between the icon and text */
            fill: #5eb5e0; /* Icon color */
        }

        .add-regime-link {
            text-decoration: none;
            display: inline-block;
        }

        .add-regime-button {
            background-color: #000000;
            padding: 8px 12px;
            font-size: 24px;
            color: #ffffff; /* Set text color for better visibility */
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none; /* Remove default link underline */
        }

        .add-regime-button:hover {
            background-color: #5eb5e0; /* Darken the background color on hover */
        }

    </style>
{% endblock %}


